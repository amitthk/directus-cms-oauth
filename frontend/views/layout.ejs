<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= typeof title !== 'undefined' ? title : 'StrideCal Docs' %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/static/css/app.css" rel="stylesheet">
  </head>
  <body>
    <div class="d-flex">
      <!-- Sidebar -->
      <nav id="sidebar" class="border-end p-3">
        <div class="d-flex align-items-center justify-content-between mb-3">
          <span class="fw-bold">Contents</span>
          <button class="btn btn-sm btn-outline-secondary" id="toggleSidebar">â˜°</button>
        </div>
        <div id="sidebarTree">
          <% function render(nodes){ %>
            <ul class="list-unstyled">
              <% nodes.forEach(n => { %>
                <li class="mb-1">
                  <a class="link-body-emphasis text-decoration-none" href="/p/<%= n.slug %>"><%= n.title %></a>
                  <% if (n.children && n.children.length) { %>
                    <div class="ms-3 mt-1">
                      <%- render(n.children) %>
                    </div>
                  <% } %>
                </li>
              <% }) %>
            </ul>
          <% } %>
          <%- render(tree || []) %>
        </div>
      </nav>

      <!-- Main -->
      <main class="flex-grow-1">
        <header class="border-bottom p-3 d-flex justify-content-between align-items-center">
          <div class="fw-semibold">StrideCal Knowledge</div>
          <div class="dropdown">
            <a href="#" class="d-inline-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown">
              <img src="https://www.gravatar.com/avatar/?d=identicon" class="rounded-circle me-2" width="28" height="28" alt="profile">
              <span><%= user || 'Guest' %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <% if (!user) { %>
                <li><a class="dropdown-item" href="/login">Login with Google</a></li>
              <% } else { %>
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
              <% } %>
            </ul>
          </div>
        </header>
        <div class="container py-4">
          <%- body %>
        </div>
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/js/app.js"></script>
  </body>
</html>
